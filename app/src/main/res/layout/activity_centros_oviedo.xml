<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".centros.centrosOviedo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nombreOviedo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del centro: " />

        <TextView
            android:id="@+id/maximoOviedo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sitios maximos: " />

        <TextView
            android:id="@+id/actualOviedo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sitios disponibles: " />

        <TextView
            android:id="@+id/calleOviedo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle: " />

        <TextView
            android:id="@+id/horarioOviedo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/nombreOviedo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del centro" />

            <TextView
                android:id="@+id/maximoOviedo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sitios maximos: " />

            <TextView
                android:id="@+id/actualOviedo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sitios disponibles" />

            <TextView
                android:id="@+id/calleOviedo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle: " />

            <TextView
                android:id="@+id/horarioOviedo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario: " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/nombreOviedo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre del centro: " />

                <TextView
                    android:id="@+id/maximoOviedo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sitios maximos: " />

                <TextView
                    android:id="@+id/actualOviedo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sitios disponibles: " />

                <TextView
                    android:id="@+id/calleOviedo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calle: " />

                <TextView
                    android:id="@+id/horarioOviedo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horario:" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>