<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".centros.centrosAviles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/nombreAviles1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del centro: "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/actualAviles1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sitios disponibles: " />

        <TextView
            android:id="@+id/maximoAviles1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sitios maximos:" />

        <TextView
            android:id="@+id/calleAviles1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calle: " />

        <TextView
            android:id="@+id/horarioAviles1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/nombreAviles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del centro: "
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/actualAviles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sitios disponibles: " />

            <TextView
                android:id="@+id/maximoAviles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sitios maximos: " />

            <TextView
                android:id="@+id/calleAviles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="Calle: " />

            <TextView
                android:id="@+id/horarioAviles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="Horario: " />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>